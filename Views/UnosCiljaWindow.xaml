<Window x:Class="Fit.Views.UnosCiljaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{DynamicResource UnosCiljaNaslov}" Height="200" Width="300">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="{DynamicResource CiljKalorijeLabel}"/>
            <TextBox Text="{Binding DnevniLimitKalorija, UpdateSourceTrigger=PropertyChanged}" Margin="0,5,0,10"/>
            <Button Content="{DynamicResource SacuvajBtn3}" Command="{Binding SacuvajCiljCommand}"/>
        </StackPanel>
    </Grid>
</Window>
